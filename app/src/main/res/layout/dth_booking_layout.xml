<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include
        layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="DTHConnectionName"
                android:visibility="invisible"
                android:textColor="@color/black"
                android:fontFamily="serif"/>

            <Spinner
                android:id="@+id/DTHConnectionName"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Pack"
                android:visibility="invisible"
                android:textColor="@color/black"
                android:fontFamily="serif"/>

            <Spinner
                android:id="@+id/Pack"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Language"
                android:visibility="invisible"
                android:textColor="@color/black"
                android:fontFamily="serif"/>

            <Spinner
                android:id="@+id/Language"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Package"
                android:visibility="invisible"
                android:textColor="@color/black"
                android:fontFamily="serif"/>

            <Spinner
                android:id="@+id/Package"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                />



            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/black"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:id="@+id/amount"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="21sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Get Amount"
                    android:id="@+id/getamount"
                    android:gravity="center"
                    android:background="@color/colorPrimary"
                    android:textColor="#FFFFFF"
                    android:layout_weight="1"
                    android:textSize="25sp" />





            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/black"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Enter Name "
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="@dimen/edit_text_size" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/black"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/holdernumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Enter H. Number"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="@dimen/edit_text_size" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/black"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/LandMark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Enter Land Mark"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="@dimen/edit_text_size" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/black"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/Address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Enter Address"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="@dimen/edit_text_size" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/black"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/pincode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Enter Pin Code Number"
                    android:inputType="number"
                    android:singleLine="true" android:maxLength="6"
                    android:textColor="#000000"
                    android:textSize="@dimen/edit_text_size" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/black"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/Mobile1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Enter Mobile1 Number"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:maxLength="10"
                    android:textSize="@dimen/edit_text_size" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/black"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/Mobile2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:maxLength="10"
                    android:hint="Enter Mobile2 Number"
                    android:singleLine="true"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:textSize="@dimen/edit_text_size" />
            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/submit"
                style="@android:style/Widget.Button.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/colorPrimary"
                android:fontFamily="serif"
                android:text="Submit"

                android:textColor="@color/white"
                />




        </LinearLayout>


    </ScrollView>




</RelativeLayout>