<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:background="?attr/colorPrimary"
    android:minHeight="?attr/actionBarSize"
    android:titleTextColor="#000000">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/image"
            app:srcCompat="@drawable/ic_arrow_back"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/fund_recieve_report_title"
            android:layout_toRightOf="@+id/image"
            android:layout_marginLeft="5dp" android:id="@+id/title"
            android:gravity="right|top" android:textColor="@color/white"
            android:layout_height="wrap_content"/>
        <TextView
        android:layout_width="wrap_content"
        android:text="@string/action_refresh" android:layout_alignParentRight="true"
          android:layout_marginRight="5dp" android:id="@+id/refresh"
              android:textColor="@color/white"
        android:layout_height="wrap_content"/>
    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>
