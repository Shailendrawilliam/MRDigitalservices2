<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    >

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rect"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="10.00dp"
        android:padding="10.00dp"
        android:elevation="18.00dp">

        <ImageView
            android:id="@+id/opImage"
            android:layout_width="100.00dp"
            android:layout_height="100.00dp"
            android:layout_marginLeft="10.80dp"
            android:layout_marginRight="10.80dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/normal"
            android:textSize="14dp"
            android:textStyle="bold"
            android:gravity="center"/>

    </LinearLayout>


</RelativeLayout>