<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="@dimen/_3sdp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="5dp"
                android:id="@+id/v1"
                android:weightSum="1"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="@dimen/_3sdp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:orientation="vertical"

                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="@string/recharge_warn"
                            android:textStyle="bold"
                            android:textColor="@color/red"
                            android:id="@+id/title"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="@string/recharge_number"
                            android:id="@+id/number" android:textStyle="bold"
                            android:layout_margin="4dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="@string/operator_title"
                            android:id="@+id/operator"
                            android:layout_margin="4dp" android:textStyle="bold"
                             android:layout_gravity="center"
                            android:layout_height="wrap_content"/>
                        <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/amount_hint"
                      android:layout_gravity="center"
                        android:id="@+id/amount" android:textStyle="bold"
                            android:layout_margin="4dp"
                        android:layout_height="wrap_content"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"

                    android:gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:text="@string/cancel_menu_label"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp" android:id="@+id/cancel"
                        android:layout_weight=".5" android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_btncancel"
                        android:layout_height="40dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:text="@string/dialog_ok" android:id="@+id/ok"
                        android:textColor="@color/white"
                        android:layout_weight=".5" android:gravity="center"
                        android:background="@drawable/bg_btnok"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="40dp"/>
                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>



</RelativeLayout>